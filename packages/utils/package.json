    "clean": "rimraf .turbo node_modules dist"
  },
  "devDependencies": {
    "@repo/tsconfig": "workspace:*",
    "@repo/eslint-config": "workspace:*",
    "@types/react": "19.0.10",
    "@types/react-dom": "19.0.3",
    "react": "19.0.0",
    "tsup": "8.3.6",
    "typescript": "5.7.3"
  },
  "dependencies": {
    "clsx": "2.1.1",
    "tailwind-merge": "3.0.1"
  },
  "overrides": {
    "@types/react": "19.0.8",
    "@types/react-dom": "19.0.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "pnpm@10.5.2"
}
