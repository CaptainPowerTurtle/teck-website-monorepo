{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["NODE_ENV"],
  "ui": "tui",
  "tasks": {
    "build": {
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env.production.local",
        ".env.local",
        ".env.production",
        ".env"
      ],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**",
        "public/dist/**",
        "storybook-static/**"
      ],
      "dependsOn": ["^build"],
      "env": ["PAYLOAD_SECRET", "DATABASE_URI"]
    },
    "test:e2e": {
      "outputs": ["tests/coverage/e2e/**"]
    },
    "test:e2e:with-build": {
      "outputs": ["tests/coverage/e2e/**"],
      "dependsOn": ["^build"]
    },
    "test": {
      "persistent": true
    },
    "test:ui": {
      "persistent": true
    },
    "test:cov": {
      "persistent": true,
      "outputs": ["tests/coverage/unit/**"]
    },
    "test:cov:ui": {
      "outputs": ["tests/coverage/unit/**"],
      "persistent": true
    },
    "test:with-build": {
      "dependsOn": ["^build"]
    },
    "lint": {
      "cache": false
    },
    "lint:fix": {
      "cache": false
    },
    "ui:add": {
      "persistent": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "payload:migrate": {
      "cache": false,
      "dependsOn": ["^build"],
      "env": ["PAYLOAD_SECRET", "DATABASE_URI", "SKIP_ENV_VALIDATION"],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env.production.local",
        ".env.local",
        ".env.production",
        ".env"
      ]
    }
  }
}
