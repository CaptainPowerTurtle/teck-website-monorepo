{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "ui": "tui",
  "globalEnv": [
    "NODE_ENV",
    "S3_BUCKET",
    "S3_ENDPOINT",
    "S3_ACCESS_KEY_ID",
    "S3_SECRET_ACCESS_KEY",
    "S3_REGION",
    "PROJECT_PRODUCTION_URL"
  ],
  "tasks": {
    "build": {
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**",
        "public/dist/**",
        "storybook-static/**"
      ],
      "dependsOn": ["^build"],
      "env": ["PAYLOAD_SECRET", "DATABASE_URI"]
    },
    "test:e2e": {
      "outputs": ["tests/coverage/e2e/**"]
    },
    "test:e2e:with-build": {
      "outputs": ["tests/coverage/e2e/**"],
      "dependsOn": ["^build"]
    },
    "test": {
      "persistent": true
    },
    "test:ui": {
      "persistent": true
    },
    "test:cov": {
      "persistent": true,
      "outputs": ["tests/coverage/unit/**"]
    },
    "test:cov:ui": {
      "outputs": ["tests/coverage/unit/**"],
      "persistent": true
    },
    "test:with-build": {
      "dependsOn": ["^build"]
    },
    "lint": {
      "cache": false
    },
    "lint:fix": {
      "cache": false
    },
    "ui:add": {
      "persistent": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "payload:migrate": {
      "cache": false,
      "dependsOn": ["@repo/utils#build"]
    }
  }
}
